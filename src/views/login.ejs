<%- include('includes/head'); %>
<%- include('includes/nav'); %>


  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login agenda</h1>
          <p class="text-center lead">Faça login ou crie sua conta!</p>
          <%- include('includes/messages'); %>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu login</h4>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email:</label>
                  <input type="email" class="form-control" placeholder="Seu email" name="email" required>
                </div>
                <div class="form-group">
                  <label>Senha:</label>
                  <input type="password" class="form-control" placeholder="Sua senha" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Login</button>
              </form>

            </div>

            <div class="col-lg">
              <h4>Faça seu cadastro</h4>


              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email:</label>
                  <input type="email" class="form-control" placeholder="Seu email" name="email" >
                </div>
                <div class="form-group">
                  <label>Senha:</label>
                  <input type="password" class="form-control" placeholder="Sua senha" name="password" >
                </div>
                <div class="form-group">
                  <label>Confirme a senha:</label>
                  <input type="password" class="form-control" placeholder="Repita sua senha" >
                </div>
                <button type="submit" class="btn btn-primary mt-2">Cadastrar</button>
              </form>

            </div>

            
          </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
  </div>


<%- include('includes/footer'); %>
